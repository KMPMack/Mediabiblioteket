    /**
     * Test of getAuthor method, of class Book.
     */
    @Test
    public void testGetAuthor() {
        String testdata = "Mack";
        Book Author = new Book("","","",1 ,testdata);
        assertEquals(Author.getAuthor(), testdata);      
    }
    @Test
    public void testSetAuthor() {
        String setAuthor = "Mack";
        Book Author = new Book("","","",1,"Mack") ;
        String expResult = setAuthor;
        String result = Author.getAuthor();
        assertEquals(expResult,result);
    }
    @Test
    public void testToString() {
        Book toString = new Book("Book","Superman","1337",2010,"Kalle");
        String result = toString.toString();
        String expResult ="Book - Free - Superman - 2010 - Kalle";
        assertEquals(result,expResult);
        
        
        
    
    }
   
